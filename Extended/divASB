;This program divides DIVIDEND by DIVISOR and displays the result in the accumulator.

%MACRO DIVIDE 4; PARAM1: DIVIDEND, PARAM2: DIVISOR, PARAM3: QUOTIENT PARAM4: THIS LAST PARAMETER IS THE LABEL OF THE LINE IN WHICH THIS MACRO IS BEING CALLED
	ADD_ONE %3		;
	LOAD %1			;
	SUB %2			;
	STO %1			;
	CMP			;
	JLP START		;
	SUBTRACT_ONE %3		;
	LOAD %3			;
%ENDMACRO

%MACRO ADD_ONE 1;
	LOAD %1	;
	ADD #1	;
	STO %1	;
%ENDMACRO

%MACRO SUBTRACT_ONE 1;
	LOAD %1	;
	SUB #1	;
	STO %1	;
%ENDMACRO

VAR 0			;
START: 	DIVIDE DIVIDEND DIVISOR QUOTIENT START;
END:	STP		;
DIVIDEND:	VAR 500	;
DIVISOR:	VAR 25	;
QUOTIENT:	VAR 0	;
