;This program demonstrates the use of macros

VAR 0				;
START: 	LDN QUOTIENT		;
	SUB ONE;
	STO TEMP		;
	LDN TEMP		;
	STO QUOTIENT		;
	LDN DIVIDEND		;
	STO TEMP		;
	LDN TEMP		;
	SUB DIVISOR		;
	STO DIVIDEND		;
	CMP			;
	JMP 0			;
	LDN QUOTIENT		;
	STO TEMP		;
	LDN TEMP		;
	SUB ONE			;
	STO QUOTIENT		;
	LDN QUOTIENT		;
	STO TEMP		;
	LDN TEMP		;
END:	STP			;
DIVIDEND:	VAR 500	;
DIVISOR:	VAR 23	;
QUOTIENT:	VAR 0	;
ONE: 		VAR 1	;
TEMP:		VAR 0	; FOR CONVERTING NEGATIVE TO POSITIVE
